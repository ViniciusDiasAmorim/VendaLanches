@model IEnumerable<LanchesVendas.Models.Lanche>

@{
    ViewData["Title"] = "Lanches";
}

<h1>Lanches</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Criar um novo produto</a>
</p>
<table class="table table-hover" style="margin-bottom:200px;text-align:center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LancheNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LancheDoDia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="vertical-align:middle">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LancheNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagemUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LancheDoDia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaDescricao)
                </td>
                <td>
                    <div class="container">
                        <div class="row">
                            <a class="btn btn-success" asp-action="Details" asp-route-id="@item.LancheId">Detalhes</a>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.LancheId">Editar</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.LancheId">Deletar</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
