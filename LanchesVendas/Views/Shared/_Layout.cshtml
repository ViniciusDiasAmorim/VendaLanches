<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanchesVendas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LanchesVendas.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/imagens/hamburguer.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-black bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Lanches" asp-action="Index"><img src="~/imagens/hamburguer.png" style="max-width:30px;max-height:30px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" style="margin-left:30px" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" style="margin-left:30px" asp-controller="Home" asp-action="Index" asp-fragment="sobre-nos">Sobre Nós</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" style="margin-left:30px" asp-controller="Home" asp-action="Index" asp-fragment="contatos">Contato</a>
                        </li>
                        <li class="nav-item">
                              @await Html.PartialAsync("_LancheDropdown")
                        </li>
                        <li>
                            @await Html.PartialAsync("_CategoriaDropdown")

                        </li>
                        <li>
                            @await Component.InvokeAsync("ExibeCarrinho")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer bg-black text-center text-white">
        <div class="container">
            <section>
                <a class="btn btn-outline-light btn-floating" href="https://www.linkedin.com/in/vinicius-dias-a8495b236/" target="_blank" role="button">
                    <i class="fab fa-linkedin-in"><img src="~/imagens/linkedin.png" /></i>
                </a>
                <a class="btn btn-outline-light btn-floating" href="https://github.com/ViniciusDiasAmorim/VendaLanches" target="_blank" role="button">
                    <i class="fab fa-github"><img src="~/imagens/github2.png" style="max-widh:32px;max-height:32px" /></i>
                </a>
            </section>
        </div>
        <div class="text-center">
            © 2020 - Criado por Vinicius Dias
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
