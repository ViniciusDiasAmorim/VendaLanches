@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="nav navbar-nav navbar-left" id="dropdowLogin">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" style="margin-left:30px;color:white" id="dropdowLoginLinks" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Administração
                </a>
                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">

                    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post" class="navbar-left">
                    <li>
                        <a class="nav-link text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Area do admin</a>
                    </li>
                    <li>
                        <button type="submit" style="width:auto" class="nav-link btn btn-link py-0">
                            Sair
                        </button>
                    </li>
                    </form>
                </ul>
        </ul>
    </div>
}
else
{
    <ul class="nav navbar-nav navbar-left">
        <li>
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login"
           asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)">&nbsp; Login&nbsp; </a>
        </li>
    </ul>
}
