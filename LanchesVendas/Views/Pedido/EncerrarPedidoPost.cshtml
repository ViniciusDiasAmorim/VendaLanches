@model Pedido

<div class="container">
    <div>
        <h2>@ViewBag.Concluido</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.ClienteNome</strong>
            <p>Data do Pedido :  <strong>@Model.PedidoEnviado</strong>
            <p>Número do Pedido   : <strong>@Model.PedidoId</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>
                @foreach (var item in Model.PedidoItems)
                 {
                    <tr>
                        <td><img src="~/imagens/@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.LancheNome</td>
                        <td>@item.Lanche.Preco</td>
                    </tr>
                 }
            </table>

      <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align:center;margin-bottom:150px">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>